# default ws names
set $workspace1  "1:[1]"
set $workspace2  "2:[2]"
set $workspace3  "3:[3]"
set $workspace4  "4:[4]"
set $workspace5  "5:[5]"
set $workspace6  "6:[6]"
set $workspace7  "7:[7]"
