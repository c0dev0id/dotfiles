# i3 config

# Mod == Alt_L
set $mod Mod1
set $term sterm

# Set font
font pango:Spleen 12

# Set color scheme (somewhat brown'ish)
set $base00 #181818
set $base01 #282828
set $base02 #383838
set $base03 #585858
set $base04 #b8b8b8
set $base05 #d8d8d8
set $base06 #e8e8e8
