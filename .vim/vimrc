" TAB LINE
set tabline=%!Tabline()
function! Tabline() abort
    let l:line = ''
    for l:i in range(1, tabpagenr('$'))
        if l:i == tabpagenr()
            let l:line .= '%#TabLineSel#'
        else
            let l:line .= '%#TabLine#'
        endif
        let l:label = fnamemodify(
            \ bufname(tabpagebuflist(l:i)[tabpagewinnr(l:i) - 1]), ':t' )
        let l:line .= '  ' . l:label . '  '
    endfor
    let l:line .= '%#TabLineFill#'
    return l:line
endfunction

